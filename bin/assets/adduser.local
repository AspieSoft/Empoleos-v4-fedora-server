#!/bin/bash

# add games folder for user
sudo mkdir "/games/$1"
sudo chown "$1:$1" "/games/$1"
sudo chmod -R 700 "/games/$1"
sudo ln -s /games/$1 "$4/.games"

if ! test -d "$4/.local/share/Steam/steamapps"; then
  mkdir -p "$4/.local/share/Steam/steamapps"
fi
mkdir "$4/.games/Steam"
mv "$4/.local/share/Steam/steamapps" "$4/.games/Steam/steamapps"
ln -s "$4/.games/Steam/steamapps" "$4/.local/share/Steam/steamapps"
